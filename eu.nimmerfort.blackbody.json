{
  "app-id": "eu.nimmerfort.blackbody",
  "runtime": "org.gnome.Platform",
  "runtime-version": "47",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.rust-stable"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin",
    "env": {
      "CARGO_HOME": "/run/build/blackbody/cargo",
      "BLACKBODY_BUILDER": "flathub"
    }
  },
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "command": "blackbody",
  "finish-args": [
    "--device=dri",
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland"
  ],
  "modules": [
    {
      "builddir": true,
      "buildsystem": "meson",
      "name": "blackbody",
      "config-opts": [
        "--buildtype=release"
      ],
      "sources": [
        "Cargo-sources.json",
        {
          "type": "git",
          "url": "https://bitbucket.org/nimmerwoner/blackbody/",
          "tag": "release-1.3.1",
          "commit": "c9b05ca96bd761f91dbd31189a55f95ca449e23f"
        }
      ]
    }
  ]
}
